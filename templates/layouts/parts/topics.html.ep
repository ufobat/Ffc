        <div class="topicpopup popup">
% for my $t ( @$topics ) {
            <p<%== $t->[8] ? qq~ class="$t->[8]"~ : '' %>><a href="<%= url_for 'show_forum', topicid => $t->[0] %>"><%= substr $t->[2], 0, $configdata->{urlshorten} %></a>...<% if ( $t->[3] and not $t->[5] ) { %> (<span class="mark"><%= $t->[3] %></span>)<% } %></p>
% }
        </div>
