<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="<%= url_for '/css/jquery.wysiwyg.css' %>" />
    <link rel="stylesheet" type="text/css" href="<%= url_for '/css/style.css' %>" />
    <script type="text/javascript" src="<%= url_for '/js/jquery.js' %>"></script>
    <script type="text/javascript" src="<%= url_for '/js/jquery.wysiwyg.js' %>"></script>
    <script type="text/javascript">
        $(function() { $('#textinput').wysiwyg({
            resizeOptions: {},
        }); }); 
    </script>
  </head>
  <body>
<img src="<%= url_for '/img/banner.png' %>" alt="" class="banner" />
<div class="menu">
% if ( session()->{user} ) {
    <a href="<%= url_for 'msglist' %>" title="Private Nachrichten"><span class="linktext">private Nachrichten</span></a>
    <span class="divider">|</span>
    <a href="<%= url_for 'noteslist' %>" title="Private Notizen"><span class="linktext">private Notizen</span></a>
    <span class="divider">|</span>
%= form_for search => ( method => 'POST' ) => begin
%= text_field query => session()->{query}
%= submit_button 'Suchen'
    <span class="divider">|</span>
    <a href="<%= url_for 'options' %>" title="Einstellungen anpassen"><span class="linktext">Einstellungen</span></a>
    <span class="divider">|</span>
% end
    <a href="<%= url_for 'logout' %>" title="abmelden"><span class="linktext">abmelden</span> <span class="logout"> X</span></a>
% } else {
    <a href="<%= url_for 'registerform' %>" title="FÃ¼r das Forum registrieren"><span class="linktext">Registrieren</span></a> 
% }
</div>
<h1 class="title"><%= title %></h1>
<%= content %>
<img src="<%= url_for '/img/bottom.png' %>" alt="" class="bottom" />
  </body>
</html>
