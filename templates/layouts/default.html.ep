<!DOCTYPE html>
<html>
  <head>
    <title><%= $AltSimpleBoard::Data::Title %> - <%= acttitle() %></title>
    <%= stylesheet '/css/style.css' %>
    <link rel="icon" type="image/ico" href="<%= url_for '/img/favicon.ico' %>" />
  </head>
  <body>
<img src="<%= url_for '/img/banner.png' %>" alt="" class="banner" />
<img src="<%= url_for '/img/icons/' . act() . '.png' %>" alt="" class="actionicon" />
<div class="menu">
% if ( session()->{user} ) {
    <a href="<%= url_for 'switch', act => 'forum' %>" title="Nachrichten für alle angemeldeten Benutzer in der Art einer öffentlichen Diskussion"><span class="linktext linkforum<%= act() eq 'forum' ? ' active activeforum' : '' %>">öffentliches Forum</span></a>
    <span class="divider">|</span>
    <span class="popup">
        <a href="<%= url_for 'switch', act => 'msgs' %>" title="Nachrichten, die nur du und dein jeweiliger Gesprächspartner lesen können"><span class="linktext linkmsgs<%= act() eq 'msgs' ? ' active activemsgs' : '' %>">private Nachrichten (<% if ( $newmsgscount ) { %><span class="mark"><%= $newmsgscount %></span><% } else { %><%= 0 %><% } %>)</span></a>
% if ( @$newmsgs ) {
        <span class="menu">
% for my $m ( @$newmsgs ) {
            <p><a href="<%= url_for 'msgs_user', msgs_userid => $m->[0] %>" title="Private Nachricht an &quot;<%= $m->[1] %>&quot; schreiben"><%= $m->[1] %> (<span class="mark"><%= $m->[2] %></span>)</a></p>
% }
        </span>
% }
    </span>
    <span class="divider">|</span>
    <a href="<%= url_for 'switch', act => 'notes' %>" title="Kleine Notizen für dich selber und niemanden sonst"><span class="linktext linknotes<%= act() eq 'notes' ? ' active activenotes' : '' %>">eigene Notizen (<% if ( $notecount ) { %><span class="mark"><%= $notecount %></span><% } else { %><%= 0 %><% } %>)</span></a>
    <span class="divider">|</span>
%= form_for search => ( method => 'POST' ) => begin
%= text_field query => session()->{query}, session()->{query} ? (class => 'activesearch') : ()
%= submit_button 'Suchen', session()->{query} ? (class => 'activesearch') : ()
    <span class="divider">|</span>
    <a href="<%= url_for 'optionsform' %>" title="Einstellungen für diese Plattform anpassen"><span class="linktext linkoptions<%= act() eq 'options' ? ' active activeoptions' : '' %>">Einstellungen</span></a>
    <span class="divider">|</span>
% end
    <a href="<%= url_for 'logout' %>" title="Vom System abmelden"><span class="linktext linklogout">abmelden</span> <span class="logout"> X</span></a>
% } else {
    <a href="<%= url_for 'registerform' %>" title="Für diese Plattform registrieren"><span class="linktext linkregister">Registrieren</span></a> 
% }
</div>
<h1 class="title"><%= $AltSimpleBoard::Data::Title %> - <%= acttitle() %><%= session()->{msgs_userid} ? ' mit ' . ( session()->{msgs_username} || 'Unbekannt' ) : '' %></h1> 
<%= content %>
<img src="<%= url_for '/img/bottom.png' %>" alt="" class="bottom" />
  </body>
</html>
