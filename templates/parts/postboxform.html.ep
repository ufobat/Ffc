<div class="postbox headbox">
% if ( $heading ) {
    <h1>
        <%= $heading %>
%   if ( $topicediturl or $topicid or $backurl ) {
    <span class="smallfont">( 
%     if ( $topicediturl ) {
        <a href="<%= $topicediturl %>" 
            title="Die Themenüberschrift ändern">ändern</a><% if ( $topicid ) { %>,<% } %> 
%     }
%     if ( $topicid ) {
        <a href="<%= url_for 'ignore_forum_topic_do', topicid => $topicid %>" 
            title="Das Thema ignorieren">ignorieren</a><%= $backurl ? ',' : '' %>
%     }
%     if ( $backurl ) { 
        <a href="<%== $backurl %>" title="zurück"><%= $backtext || 'zurück' %></a>
%     }
        )</span> 
%   }
    </h1>
% }
<% if ( $description ) { %><p><%= $description %></p><% } %>
<form action="<%== $dourl %>" accept-charset="UTF-8" method="POST">
<p class="insertformbuttons">
% if ( defined $postid ) {
    <input type="hidden" name="postid" value="<%= $postid %>" />
% }
%= submit_button 'senden', class => 'linkalike send'
(
<a href="<%== $returl %>" title="&Auml;nderung abbrechen">abbrechen</a>,
<a href="<%= url_for 'help' %>" target="_blank">Hilfe</a><script type="text/javascript">
    document.write('<span class="editbuttons">, ');
    document.write('<a href="#" class="buttonalike" id="boldbutton" title="Fett markiert (wortweise, \'+\')"><b>f</b></a>');
    document.write('<a href="#" class="buttonalike" id="linethroughtbutton" title="Durchgestrichen (wortweise, \'-\')"><strike>d</strike></a>');
    document.write('<a href="#" class="buttonalike" id="underlinebutton" title="Unterstreichung (wortweise, \'_\')"><u>u</u></a>');
    document.write('<a href="#" class="buttonalike" id="italicbutton" title="Schräg geschrieben (wortweise, \'~\')"><i>k</i></a> ');
    document.write('<a href="#" class="buttonalike" id="h1button" title="Überschrift (zeilenweise, \'=\' am Zeilenanfang)"><u><b>Ü</b></u></a>');
    document.write('<a href="#" class="buttonalike" id="unorderedlistbutton" title="Unsortierte Liste (zeilenweise, \'-\' am Zeilenanfang)">&middot;</a>');
    document.write('<a href="#" class="buttonalike" id="orderedlistbutton" title="Aufzählungsliste (zeilenweise, \'#\' am Zeilenanfang)">&sup1;</a> ');
    document.write('<a href="#" class="buttonalike" id="prebutton" title="Vorformatierter Quelltext (zeilenweise, \' \', am Zeilenanfang)"><code>C</code></a> ');
    document.write('<a href="#" class="buttonalike" id="attentionbutton" title="Aufmerksamkeit (wortweise, \'!\')">!</a>');
    document.write('<a href="#" class="buttonalike" id="emotionalbutton" title="Emotional (wortweise, \'*\')">*</a>');
    document.write('</span>');
</script>
)
</p>
<p>
    <textarea 
        name="textdata" 
        id="textinput" 
        class="edit<%= $textdata ? ' inedit' : '' %>"
    ><%== $textdata // '' %></textarea>
</p>
<script type="text/javascript">
    document.write('<p id="closetextap" class="textright nodisplay"><a href="#" class="buttonalike" id="closetextabutton" title="Textfeld wieder zusammen klappen">Textfeld einklappen</a></p>');
</script>
</form>
</div>
<%= javascript '/js/editbuttons.js' %>
