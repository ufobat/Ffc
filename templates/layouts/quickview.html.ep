<!DOCTYPE html>
<html>
  <head>
    <title>(<%= $newpostcount + $newmsgscount %>) <%= $configdata->{title} %></title>
  </head>
  <body>
<%= content %>    <script type="text/javascript">
      "use strict";
      window.onload = function(){
        var mytime  = new Date();
        var myh = mytime.getHours(), mym = mytime.getMinutes();
        document.getElementsByTagName("title")[0].firstChild.data
          += ', ' 
          + ( myh < 10 ? '0'+myh : myh ) 
          + ':' + ( mym < 10 ? '0'+mym : mym );
        window.setInterval(function(){
          location.reload();
        }, <%= session()->{autorefresh} || 3 %> * 60000
      )};
    </script>
  </body>
</html>


