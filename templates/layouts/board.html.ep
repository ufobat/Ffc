<!DOCTYPE html>
<html>
  <head>
    <title><%= $title %></title>
    <%= stylesheet stylefile() %>
    <link rel="icon" type="image/ico" href="<%= url_for $favicon %>" />
%= include 'layouts/parts/styleinc'
  </head>
  <body>
<!-- Angemeldet als "<%= session()->{user} %>" !-->

<div class="menu">
    <a href="<%= url_for 'act_show', act => 'forum' %>" title="Nachrichten für alle angemeldeten Benutzer in der Art einer öffentlichen Diskussion"><span class="linktext linkforum<%= $act eq 'forum' ? ' active activeforum' : '' %>">Forum<% if ( $newpostcount ) { %> (<span class="mark"><%= $newpostcount %></span>)<% } %></span></a>
    <a href="<%= url_for 'act_show', act => 'pmsgs' %>" title="Nachrichten, die nur du und dein jeweiliger Gesprächspartner lesen können"><span class="linktext linkpmsgs<%= $act eq 'pmsgs' ? ' active activepmsgs' : '' %>">Nachrichten<% if ( $newmsgscount ) { %> (<span class="mark"><%= $newmsgscount %></span>)<% } %></span></a>
    <a href="<%= url_for 'act_show', act => 'notes' %>" title="Kleine Notizen für dich selber und niemanden sonst"><span class="linktext linknotes<%= $act eq 'notes' ? ' active activenotes' : '' %>">Notizen<% if ( $notecount ) { %> (<span class="notecount"><%= $notecount %></span>)<% } %></span></a>
%= form_for search => ( method => 'POST' ) => begin
%= text_field query => session()->{query}, session()->{query} ? (class => 'activesearch') : ()
    <button type="submit" class="linkalike">» Suche</button>
% end
    <a href="<%= url_for 'options_form' %>" title="Verschiedene Einstellungen für diese Plattform den eigenen Wünschen anpassen"><span class="linktext linkoptions<%= $act eq 'options' ? ' active activeoptions' : '' %>">Optionen</span></a>
    <a href="<%= url_for 'logout' %>" title="Vom System abmelden"><span class="linkalike linklogout">&quot;<%= session()->{user} %>&quot; abmelden</span></a>
</div>

%= include 'parts/messageboxes'

%= content

  </body>
</html>
