<div class="postbox <%= $act %><%= $post->{ownpost} ? ' '.$act.'ownpost ownpost' : '' %><%= $post->{active} ? ' activepost' : '' %><%= $post->{newpost} ? ' newpost' : '' %>">
    <h2>
% if ( $act ne 'notes' and $post->{avatar} and session()->{show_images} ) {
        <img class="avatar" src="<%= url_for 'show_avatar', username => $post->{avatar} %>" alt="Avatar für Benutzer &quot;<%= $post->{avatar} %>&quot;" />
% }
% if ( $act ne 'notes' ) {
%   if ( $post->{from}->{active} ) {
        <%= $post->{from}->{name} %>
%   } else {
        <span class="inactive"><%= $post->{from}->{name} %></span>
%   } 
%   if ( $act eq 'msgs' ) {
        → 
%     if ( $post->{to}->{active} ) {
        <%= $post->{to}->{name} %>
%     } else {
        <span class="inactive"><%= $post->{to}->{name} %></span>
%     } 
%   } 
% }
        <span class="titleinfo"><%= $act eq 'notes' ? '' : '(' %>
% if ( $post->{active} ) {
          <%= $post->{timestamp} %>, in Bearbeitung
% } else {
          <%= $post->{timestamp} %><%= $post->{iconspresent} ? ',' : '' %>
%   if ( $post->{editable} ) {
          <a href="<%= url_for_me edit_form     => postid => $post->{id} %>" title="Beitrag bearbeiten">Bearbeiten</a>,
      <a href="<%= url_for_me delete_check  => postid => $post->{id} %>" title="Beitrag l&ouml;schen">L&ouml;schen</a><%= $post->{uploadable} ? ',' : '' %>
%   }
%   for my $w (qw(from to)) {
%     if ( $post->{$w} and $post->{$w}->{chatable} ) {
          <a href="<%= url_for_me show => act => 'msgs', msgs_username => $post->{$w}->{name} %>"
            title="Dem Benutzer &quot;<%= $post->{$w}->{name} %>&quot; eine private Nachricht zukommen lassen">
            Privatnachrichten</a><%= $post->{uploadable} ? ',' : '' %>
%     } 
%   }
%   if ( $post->{uploadable} ) {
          <a href="<%= url_for_me upload_form   => postid => $post->{id} %>" title="Datei an den Beitrag anf&uuml;gen">Anhang</a>
%   }
% }
        <%= $act eq 'notes' ? '' : ')' %></span>:
    </h2>
% if ( $post->{active} ) {
    <%== $post->{start} %>
% } else {
    <%== $post->{text} %>
%   if ( @{ $post->{attachements} } ) {
    <h3 class="attachementtitle">Anhänge:</h3>
%   }
%   for ( @{ $post->{attachements} } ) {
      <%= include 'parts/attachement', att => $_, ownpost => $post->{ownpost}, deletable => 1 %>
%   }
% }
</div>
