% if ( $msgs_username and $msgs_username eq $dat->[0] ) {
   <span class="active<%= $dat->[3] ? '' : ' inactive' %>"><span class="username"><%= $dat->[0] %></span> <span class="userinfo">(<%= $dat->[2] %>)</span></span>
% } else {
   <a href="<%= url_for_me show => msgs_username => $dat->[0] %>" title="Privatnachrichten an &quot;<%= $dat->[0] %>&quot; lesen und schreiben">
       <span class="username"><%= $dat->[0] %></span> <span class="userinfo">(<%= $dat->[2] %><% if ( $dat->[1] ) { %>, <span class="mark"><%= $dat->[1] %></span><% } %><%= $dat->[3] ? '' : ', inaktiv' %>)</span></a>
% }
