<!DOCTYPE html>
<html>
  <head>
    <title><%= $Ffc::Data::Title %> (<%= $newpostcount %>/<%= $newmsgscount %>) - <%= acttitle() %></title>
    <%= stylesheet $Ffc::Data::Themedir.session()->{theme}.'/css/style.css' %>
    <link rel="icon" type="image/ico" href="<%= $Ffc::Data::Favicon || url_for $Ffc::Data::Themedir.session()->{theme}.'/img/favicon.png' %>" />
    <script type="text/javascript">
        var hasfocus=1;
        document.onfocus =function(){ hasfocus=1 };
        document.onblur  =function(){ hasfocus=0 };
        window.setInterval(function(){
            if ( hasfocus == 0 
              && ( '<%= $act %>' == 'forum' 
                || '<%= $act %>' == 'notes' 
                || '<%= $act %>' == 'msgs' )
              && document.getElementById('textinput').value == '' 
            )
                if ( !location.href.match(/autoreload$/) ) {
                    location.href = location.href + '/autoreload';
                }
                location.reload(true);
        }, <%= $Ffc::Data::RefreshInterval %>);
    </script>
  </head>
  <body>
% if ( session()->{user} ) {
%= include 'parts/menu'
% }
%= include 'parts/error'
%= include 'parts/info'
%= content
%= include 'parts/footerlinks'
  </body>
</html>
