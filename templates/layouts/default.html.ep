<!DOCTYPE html>
<html>
  <head>
    <title><%= $Ffc::Data::Title %> (<%= $newpostcount %>/<%= $newmsgscount %>) - <%= acttitle() %></title>
    <%= stylesheet $Ffc::Data::Themedir.session()->{theme}.'/css/style.css' %>
    <link rel="icon" type="image/ico" href="<%= $Ffc::Data::Favicon || url_for $Ffc::Data::Themedir.session()->{theme}.'/img/favicon.png' %>" />
    <script type="text/javascript">
        hasfocus=1;
        function get_focus(ereignis)  { hasfocus=1; return "got focus"  }
        function lose_focus(ereignis) { hasfocus=0; return "lost focus" }
        function got_loaded(ereignis) {
            document.addEventListener('focus', get_focus,  false);
            document.addEventListener('blur',  lose_focus, false);
            window.setInterval(function(){
                if ( hasfocus == 0 
                  && ( 
                     ! document.getElementById('textinput')
                    || document.getElementById('textinput').value == ''
                  )
                  && ( '<%= $act %>' == 'forum' 
                    || '<%= $act %>' == 'notes' 
                    || '<%= $act %>' == 'msgs' )
                ) {
                    if ( !location.href.match(/autoreload$/) )
                        location.href = location.href + '/autoreload';
                    location.reload(true);
                }
            }, <%= $Ffc::Data::RefreshInterval %>);
            return "loaded ...";
        }
    </script>
  </head>
  <!-- body onload="got_loaded()" !-->
  <body>
% if ( session()->{user} ) {
%= include 'parts/menu'
% }
%= include 'parts/error'
%= include 'parts/info'
%= content
%= include 'parts/footerlinks'
  </body>
</html>
