<!DOCTYPE html>
<html>
  <head>
    <title><%= $Ffc::Data::Title %> (<%= $newpostcount %>/<%= $newmsgscount %>) - <%= acttitle() %></title>
% if ( session()->{mobile} ) {
    <%= stylesheet '/mobile.css' %>
% } else {
    <%= stylesheet '/'.$Ffc::Data::Themedir.'/'.theme().'/css/style.css' %>
% }
    <link rel="icon" type="image/ico" href="<%= $Ffc::Data::Favicon || url_for '/'.$Ffc::Data::Themedir.'/'.session()->{theme}.'/img/favicon.png' %>" />
% if ( session()->{bgcolor} or session()->{fontsize} ) {
    <style type="text/css">body { 
%   if ( bgcolor() ) {
        background-color: <%= bgcolor() %>;
%   }
%   if ( session()->{fontsize} ) {
        font-size: <%= $Ffc::Data::FontSizeMap{session()->{fontsize}} %>em;
%   }
    }</style>
% }
  </head>
  <body>
%= include 'parts/menu'
%= include 'parts/error'
%= include 'parts/info'
%= content
%= include 'parts/footerlinks'
  </body>
</html>
